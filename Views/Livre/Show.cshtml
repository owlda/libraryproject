@model IEnumerable<LibraryProject.Models.Livre>

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="jumbotron">
        <h2>Catalogue de bibliotheque:</h2>
        <p>
            @Html.ActionLink("Ajouter un livre", "Create")
        </p>
        <table id="adminview" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberAvalible)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberAvalible)
                        </td>
                        <td>
                            @if (item.NumberAvalible.Equals("Non disponible"))
                            {

                                @Html.ActionLink("Edit | ", "Edit", new { id = item.Id })
                                @Html.ActionLink("Details | ", "Details", new { id = item.Id })
                                @Html.ActionLink("Delete ", "Delete", new { id = item.Id })

                            }
                            else
                            {
                                @Html.ActionLink("Reserver | ", "Reserver", new { id = item.Id })
                                @Html.ActionLink("Edit | ", "Edit", new { id = item.Id })
                                @Html.ActionLink("Details | ", "Details", new { id = item.Id })
                                @Html.ActionLink("Delete ", "Delete", new { id = item.Id })
                            }

                        </td>
                    </tr>
                }

            </tbody>              

        </table>

        <div>
            <p>&copy; @DateTime.Now.Year - Bibliothèque publique de centre communautaire (GPLCC)</p>
        </div>
    </div>
@section scripts{        
    <script>
        $(document).ready(function () {
            $('#adminview').DataTable();
        });
    </script>    
    }
